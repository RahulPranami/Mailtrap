{
  "scripts": {
    "phpcs": "phpcs --standard=WordPress ./ --ignore='*/vendor/*,*/node_modules/*,*/mysql*'",
    "phpcbf": "phpcbf --standard=WordPress ./ --ignore='*/vendor/*,*/node_modules/*,*/mysql*'"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
